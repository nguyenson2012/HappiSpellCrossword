<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/happi_spell_logo"
        android:src="@drawable/game_logo_en"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/recycleview_stage_margin_left"
        android:layout_marginRight="@dimen/recycleview_stage_margin_right"
        android:layout_marginTop="@dimen/recycleview_stage_margin_top"
        android:layout_marginBottom="@dimen/recycleview_stage_margin_bottom">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <ImageView
        android:id="@+id/ic_volume_start"
        android:layout_width="@dimen/button_sound_size"
        android:layout_height="@dimen/button_sound_size"
        android:src="@drawable/ic_volume_up_white_48pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:id="@+id/ic_info_start"
        android:layout_width="@dimen/button_sound_size"
        android:layout_height="@dimen/button_sound_size"
        android:layout_marginLeft="@dimen/button_sound_size"
        android:src="@drawable/ic_info_white_48pt"
        android:layout_alignParentBottom="true" />

</RelativeLayout>