                android:layout_height="@dimen/button_answer_size"
                android:text="F"
                style="@style/YellowButton"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_answer_G"
                android:layout_width="@dimen/button_answer_size"
                android:layout_height="@dimen/button_answer_size"
                android:text="G"
                style="@style/YellowButton"/>
            <Button
                android:id="@+id/bt_answer_H"
                android:layout_width="@dimen/button_answer_size"
                android:layout_height="@dimen/button_answer_size"
                android:text="H"
                style="@style/YellowButton"/>
            <Button
                android:id="@+id/bt_answer_I"
                android:layout_width="@dimen/button_answer_size"
                android:layout_height="@dimen/button_answer_size"
                android:text="I"
                style="@style/YellowButton"/>

